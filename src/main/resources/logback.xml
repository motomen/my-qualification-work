<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-6level \(%file:%line\):\t%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="foodforyou" level="DEBUG"/>

    <root>
        <level value="OFF" />

        <appender-ref ref="console" />
        <!-- <appender-ref ref="/tmp/lifedreams.log" /> -->
    </root>
</configuration>
