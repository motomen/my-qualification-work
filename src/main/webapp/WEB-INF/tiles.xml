<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="DefaultTemplate" template="/WEB-INF/template/index/template.jsp">
        <put-attribute name="header" value="" />
        <put-attribute name="menu" value="/WEB-INF/template/menu/menu.jsp" />
        <put-attribute name="userMenu" value="/WEB-INF/template/menu/usermenu.jsp" />
        <put-attribute name="adminMenu" value="/WEB-INF/template/menu/adminmenu.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/template/index/footer.jsp" />
    </definition>

    <definition name="index" extends="DefaultTemplate">
        <put-attribute name="header" value="/WEB-INF/template/index/header.jsp" />
        <put-attribute name="body" value="/WEB-INF/template/index/body.jsp" />
    </definition>

    <definition name="login" extends="DefaultTemplate">
        <put-attribute name="body" value="/WEB-INF/template/login/body.jsp" />
        <put-attribute name="header" value="/WEB-INF/template/login/header.jsp" />
    </definition>
</tiles-definitions>